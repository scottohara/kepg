#ifndef XMLTVBASE_H
#define XMLTVBASE_H

#include <QObject>
#include <kio/job.h>

class XmlTvBase : public QObject
{
  Q_OBJECT
  public:
    /**
     * Default Constructor
     */
    XmlTvBase();

    /**
     * Default Destructor
     */
    virtual ~XmlTvBase();
    
    void fetch();
    QString read();
    
    
  Q_SIGNALS:
    void fetched();
    
  private:
    KIO::FileJob *m_destFile;
    QByteArray m_data;
    QString m_lastModified;

  protected:
    const QString URL;
    const QString FILE_PATH;
    
  protected Q_SLOTS:
    virtual void slotFileOpen(KIO::Job *job);
    virtual void slotFileWritten(KIO::Job *job, KIO::filesize_t written);
    virtual void slotFetch(KJob *job);
 
};

#endif // XMLTVBASE_H
